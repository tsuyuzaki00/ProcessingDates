void setup(){
  size(500,500,P3D);
  background(255, 255, 255);
}
void draw(){
  lights();
  translate(250,250,0);
  rotateX(150);
  box(100,100,100);
  translate(0,-100,20);
  noStroke();
  sphere(50);
  frameRate(100);
  fill(random(1,255), random(1,255), random(1,255),random(1,255));
  translate(random(-550,550), random(-500,1000), 0);
  sphere(50);
  textSize(28);
  text("Never give up",random(-1000,1000),random(-1000,1000));
}
