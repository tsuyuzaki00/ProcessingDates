int X,Y,Z;

void setup() {
size(500,500,P3D);
}
void draw() {
background(255);
X += 10;
Y += 10;
Z += 10;
lights();
stroke(255,255,255,0);
translate(250,250,0);
frameRate(1);
rotateX(150+X);
rotateY(Y);
rotateZ(-150+Z);
sphere(100);
translate(200,0,0);
sphere(100);
translate(300,0,0);
sphere(100);
translate(-700,0,0);
sphere(100);
strokeWeight(10);
line(-1000,0,0,1000,0,0);
}
